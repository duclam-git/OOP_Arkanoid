<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="gamePane" prefHeight="600.0" prefWidth="800.0"
            style="-fx-background-color: black;"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.arkanoid.GameController">

    <Rectangle fx:id="paddle"
               arcHeight="5.0" arcWidth="5.0"
               height="15.0" width="100.0"
               fill="LIGHTGRAY"
               AnchorPane.bottomAnchor="30.0"
               AnchorPane.leftAnchor="350.0"/>

    <Circle fx:id="ball"
            radius="8.0"
            fill="WHITE"
            AnchorPane.bottomAnchor="45.0"
            AnchorPane.leftAnchor="400.0"/>

    <Label fx:id="scoreLabel"
           text="Score: 0"
           textFill="WHITE"
           AnchorPane.topAnchor="10.0"
           AnchorPane.rightAnchor="10.0">
        <font>
            <Font size="18.0" />
        </font>
    </Label>
</AnchorPane>